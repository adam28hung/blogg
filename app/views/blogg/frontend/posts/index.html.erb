          <!-- Blog Search Well -->
          <div class="well">
              <h4>Blog Search</h4>
              <div class="input-group">
                  <input type="text" class="form-control">
                  <span class="input-group-btn">
                      <button class="btn btn-default" type="button" style="padding: 6px 12px;border-radius: 0px 4px 4px 0px;">
                          <span class="glyphicon glyphicon-search"></span>
                      </button>
