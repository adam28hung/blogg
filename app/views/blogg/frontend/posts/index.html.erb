<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->

<header class="intro-header" style="<%= %Q( background-image: url(#{image_path('blogg/frontend/blog/home-bg.jpg')}) ) %>" >
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Blog</h1>
                    <hr class="small">
                    <span class="subheading">A Clean Blog</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-8">

        <%= render partial: 'blogg/frontend/posts/preview_block', collection: @posts, as: :post %>

        <ul class="pager">
          <li class="previous">
            <%= link_to_previous_page @posts, '上一頁' %>
          </li>
          <li class="next">
            <%= link_to_next_page @posts, '下一頁' %>
          </li>
        </ul>
        <br>
      </div>
