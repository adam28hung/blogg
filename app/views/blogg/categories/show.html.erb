    <!-- <label for="InputName">目錄名稱</label> -->
    <%= f.input :name, class: 'form-control', placeholder: "目錄名稱" %>
    <%= f.input :parent_id, as: :hidden %>
  </div>
  <div class="form-group">
    <div class="form-group">
      <%# f.simple_fields_for :cover do |attach| %>
       <%# attach.input :attachment, as: :file, class: 'file' %>
      <%# end%>
      <%# file_field_tag :attachment , class: 'file' %>
    </div>
  </div>

  <%= f.button :submit, "送出", class: "btn btn-default" %>
<% end %>
