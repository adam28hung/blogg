<div class='pull-right' style='padding: 5px 5px 5px 0px;'>
  <%= link_to '根目錄', categories_path(), role: 'button', class: 'btn btn-primary btn-sm' %>
  <%= link_to_parent_path @category, role: 'button', class: 'btn btn-success btn-sm' %>
  <%= link_to '編輯', edit_category_path(@category), role: 'button', class: 'btn btn-info btn-sm' %>
  <%= link_to '刪除', category_path(@category), role: 'button', class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @category.name %></h3>
  </div>
  <div class="panel-body">
    <%# render_category_cover(@category) %>
    <%= render_category_table(@category.children, title: '子目錄') %>
  </div>
</div>

<hr>
新增子目錄<br>
