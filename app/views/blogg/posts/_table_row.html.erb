<tr>
  <td>
    <%= link_to post.title, post_path(post) %>
  </td>
  <td>
    <%=  truncate(post.description, length: 50, omission: "...") %>
  </td>
  <td>
    <%= render_my_category(article: post, plain: true) %>
  </td>
  <td class='text-center'>
    <%= link_to 'Edit', edit_post_path(post), role: 'button', class: 'btn btn-info', data: { no_turbolink: true } %>
    <%= link_to 'delete', post_path(post), role: 'button', class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
