
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @post.title %></h3>
    Description: <%= @post.description %><br>
    <%= render_my_category article: @post %>
  </div>
  <div class="panel-body">
    <%# render_tag_list article: @post, tag_context: 'topic' %>
    <%= link_to 'Edit', edit_post_path(@post), role: 'button', class: 'btn btn-info pull-right', data: { no_turbolink: true } %>
    <%= link_to 'Back', posts_path, role: 'button', class: 'btn btn-info pull-right' %>
    <%= @post.article.content.html_safe %>
  </div>
</div>

<hr>
